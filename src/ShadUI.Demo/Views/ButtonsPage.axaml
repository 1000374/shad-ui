<UserControl
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.ButtonsPage"
    x:DataType="viewModels:ButtonsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    xmlns:icons="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Button" />
            <TextBlock Classes="p" Text="Displays a button component" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Code="{Binding PrimaryCode}"
                        Language="xaml"
                        Title="Primary">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Primary"
                                Command="{Binding SubmitCommand}"
                                Content="Primary"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}" />
                            <Button
                                Classes="Primary"
                                Command="{Binding SubmitCommand}"
                                Content="Edit"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Height="16"
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource PrimaryForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="10" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                Classes="Primary"
                                Content="Disable"
                                IsEnabled="False" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding SecondaryCode}"
                        Language="xaml"
                        Title="Secondary">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Secondary"
                                Command="{Binding SubmitCommand}"
                                Content="Secondary"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}" />
                            <Button
                                Classes="Secondary"
                                Command="{Binding SubmitCommand}"
                                Content="Edit"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Height="16"
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource SecondaryForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="10" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                Classes="Secondary"
                                Content="Disable"
                                IsEnabled="False" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding DestructiveCode}"
                        Language="xaml"
                        Title="Destructive">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Destructive"
                                Command="{Binding SubmitCommand}"
                                Content="Destructive"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}" />
                            <Button
                                Classes="Destructive"
                                Command="{Binding SubmitCommand}"
                                Content="Delete"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Height="16"
                                        Icon="Trash"
                                        StrokeBrush="{DynamicResource DestructiveForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="10" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                Classes="Destructive"
                                Content="Disable"
                                IsEnabled="False" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding OutlineCode}"
                        Language="xaml"
                        Title="Outline">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Outline"
                                Command="{Binding SubmitCommand}"
                                Content="Outline"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}" />
                            <Button
                                Classes="Outline"
                                Command="{Binding SubmitCommand}"
                                Content="Edit"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Height="16"
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource ForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="10" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                Classes="Outline"
                                Content="Disable"
                                IsEnabled="False" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding GhostCode}"
                        Language="xaml"
                        Title="Ghost">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Ghost"
                                Command="{Binding SubmitCommand}"
                                Content="Ghost"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}" />
                            <Button
                                Classes="Ghost"
                                Command="{Binding SubmitCommand}"
                                Content="Edit"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Height="16"
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource ForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="10" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                Classes="Ghost"
                                Content="Disable"
                                IsEnabled="False" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding IconCode}"
                        Language="xaml"
                        Title="Icon">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                BorderBrush="{DynamicResource BorderColor}"
                                Classes="Icon"
                                Command="{Binding SubmitCommand}"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource ForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="16" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button
                                BorderBrush="{DynamicResource BorderColor}"
                                Classes="Icon"
                                IsEnabled="False">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Icon="Pencil"
                                        StrokeBrush="{DynamicResource ForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="16" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding DestructiveIconCode}"
                        Language="xaml"
                        Title="Destructive Icon">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="DestructiveIcon"
                                Command="{Binding SubmitCommand}"
                                extensions:ButtonAssist.ShowProgress="{Binding IsBusy}">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Icon="Trash"
                                        StrokeBrush="{DynamicResource DestructiveForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="16" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                            <Button Classes="DestructiveIcon" IsEnabled="False">
                                <extensions:ButtonAssist.Icon>
                                    <icons:Lucide
                                        Icon="Trash"
                                        StrokeBrush="{DynamicResource DestructiveForegroundColor}"
                                        StrokeThickness="1.5"
                                        Width="16" />
                                </extensions:ButtonAssist.Icon>
                            </Button>
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>