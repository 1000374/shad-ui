<UserControl
    x:Class="ShadUI.Demo.Views.CardPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignWidth="800"
    x:DataType="viewModels:CardViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock Classes="h2" Text="Card" />
            <TextBlock
                Classes="p"
                Text="Displays a card with header, content, and footer."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                MaxWidth="{StaticResource PageMaxWidth}"
                Margin="{StaticResource PageMargin}"
                Spacing="32">
                <controls:ControlBlock
                    Title="Usage"
                    Code="{Binding UsageCode}"
                    Language="xaml">
                    <shadui:Card
                        Margin="4"
                        HorizontalAlignment="Center"
                        HasShadow="True">
                        <shadui:Card.Header>
                            <StackPanel>
                                <shadui:CardTitle>Create project</shadui:CardTitle>
                                <shadui:CardDescription>Deploy your new project in one-click.</shadui:CardDescription>
                            </StackPanel>
                        </shadui:Card.Header>
                        <StackPanel Spacing="16">
                            <TextBox shadui:ControlAssist.Label="Name" Watermark="Name of your project" />
                            <ComboBox
                                Width="300"
                                shadui:ControlAssist.Label="Framework"
                                SelectedIndex="0">
                                <ComboBox.Items>
                                    <ComboBoxItem>Next.js</ComboBoxItem>
                                    <ComboBoxItem>React</ComboBoxItem>
                                    <ComboBoxItem>Vue.js</ComboBoxItem>
                                    <ComboBoxItem>Angular</ComboBoxItem>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>
                        <shadui:Card.Footer>
                            <DockPanel>
                                <Button
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Left"
                                    Classes="Outline">
                                    Cancel
                                </Button>
                                <Button
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Right"
                                    Classes="Primary">
                                    Deploy
                                </Button>
                            </DockPanel>
                        </shadui:Card.Footer>
                    </shadui:Card>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>