<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.ToolTipPage"
    x:DataType="viewModels:ToolTipViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Tooltip" />
            <TextBlock
                Classes="p"
                HorizontalAlignment="Left"
                Text="A popup that displays information related to an element when the mouse hovers over it."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Code="{Binding UsageCode}"
                        Language="xaml"
                        Title="Usage">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button
                                Classes="Outline"
                                ToolTip.Placement="Top"
                                ToolTip.Tip="Add to library"
                                ToolTip.VerticalOffset="-5">
                                Hover
                            </Button>
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>