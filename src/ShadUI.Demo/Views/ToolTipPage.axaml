<UserControl
    x:Class="ShadUI.Demo.Views.ToolTipPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:ToolTipViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock Classes="h2" Text="Tooltip" />
            <TextBlock
                HorizontalAlignment="Left"
                Classes="p"
                Text="A popup that displays information related to an element when the mouse hovers over it."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                MaxWidth="{StaticResource PageMaxWidth}"
                Margin="{StaticResource PageMargin}"
                Spacing="32">
                <controls:ControlBlock
                    Title="Usage"
                    Code="{Binding UsageCode}"
                    Language="xaml">
                    <Button
                        HorizontalAlignment="Center"
                        Classes="Outline"
                        ToolTip.Placement="Top"
                        ToolTip.Tip="Add to library"
                        ToolTip.VerticalOffset="-5">
                        Hover
                    </Button>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>