<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:contents="clr-namespace:ShadUI.Contents;assembly=ShadUI"
             xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ShadUI.Demo.Views.AboutContent"
             x:DataType="viewModels:AboutViewModel">
    <StackPanel Margin="0,24">
        <PathIcon Margin="8,8,0,8" Width="48" Height="48" Data="{x:Static contents:Icons.Logo}" />
        <TextBlock Margin="0,24,0,8" Text="ShadUI" Classes="h2" TextAlignment="Center" />
        <TextBlock TextAlignment="Center" Classes="Small" Margin="24,0" Width="400" TextWrapping="Wrap"
                   Text="ShadUI is an Avalonia-based Desktop UI Library inspired by shadcn/ui and Suki UI Library to deliver a modern, beautiful, and intuitive UI library for Avalonia." />
        <TextBlock Text="{Binding AppVersion}" TextAlignment="Center" Margin="8" Classes="Muted Small" />
        <Button Margin="0,36" HorizontalAlignment="Center" Classes="Primary" Width="64" Command="{Binding CloseCommand}">OK</Button>
    </StackPanel>
</UserControl>