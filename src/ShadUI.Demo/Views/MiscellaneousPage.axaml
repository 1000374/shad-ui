<UserControl
    x:Class="ShadUI.Demo.Views.MiscellaneousPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:MiscellaneousViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="1536"
            Margin="48,24"
            DockPanel.Dock="Top">
            <TextBlock Classes="h3" Text="Miscellaneous" />
            <TextBlock
                HorizontalAlignment="Left"
                Classes="p"
                Text="A collection of miscellaneous controls that don’t fit into any specific category"
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel MaxWidth="1536" Margin="48,24">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Title="Busy Area"
                        Code="{Binding BusyAreaCode}"
                        Language="xaml">
                        <Border
                            Height="400"
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="{DynamicResource XlCornerRadius}">
                            <Panel>
                                <Button
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Classes="Outline"
                                    Command="{Binding ToggleBusyCommand}">
                                    Load
                                </Button>
                                <shadui:BusyArea CornerRadius="{DynamicResource LgCornerRadius}" IsBusy="{Binding IsBusy}" />
                            </Panel>
                        </Border>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Skeleton"
                        Code="{Binding SkeletonCode}"
                        Language="xaml">
                        <StackPanel
                            Margin="24"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="16">
                            <shadui:Skeleton
                                Width="64"
                                Height="64"
                                CornerRadius="{DynamicResource FullCornerRadius}" />
                            <StackPanel VerticalAlignment="Center" Spacing="8">
                                <shadui:Skeleton
                                    Width="255"
                                    Height="28"
                                    HorizontalAlignment="Left" />
                                <shadui:Skeleton
                                    Width="200"
                                    Height="20"
                                    HorizontalAlignment="Left" />
                            </StackPanel>
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>