                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Grid.Column="2"
                                                            Text="+$39.00"
                                                            VerticalAlignment="Center" />
                                                    </Grid>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>
                                    </Grid>
                                </breakpoints:View>
                                <breakpoints:View Breakpoint="MdAndDown">
                                    <Grid Margin="-8,0" RowDefinitions="* *">
                                        <Border
                                            Background="{DynamicResource CardBackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            BoxShadow="0 2 4 0 #20000000"
                                            CornerRadius="{DynamicResource 2XlCornerRadius}"
                                            Margin="8"
                                            MinHeight="360">
                                            <DockPanel>
                                                <TextBlock
                                                    DockPanel.Dock="Top"
                                                    FontSize="16"
                                                    FontWeight="DemiBold"
                                                    Margin="24,24,24,12"
                                                    Text="Overview" />
                                                <avalonia:CartesianChart
                                                    Margin="12,0,12,12"
                                                    Name="CartesianChart2"
                                                    Series="{Binding Series}"
                                                    TooltipTextPaint="{Binding TooltipTextPaint}"
                                                    TooltipTextSize="14"
                                                    XAxes="{Binding XAxes}"
                                                    YAxes="{Binding YAxes}" />
                                            </DockPanel>
                                        </Border>
                                        <Border
                                            Background="{DynamicResource CardBackgroundColor}"
                                            BorderBrush="{DynamicResource BorderColor}"
                                            BorderThickness="1"
                                            BoxShadow="0 2 4 0 #20000000"
                                            CornerRadius="{DynamicResource 2XlCornerRadius}"
                                            Grid.Row="1"
                                            Margin="8">
                                            <DockPanel>
                                                <StackPanel
                                                    DockPanel.Dock="Top"
                                                    Margin="24"
                                                    Spacing="8">
                                                    <TextBlock
                                                        FontSize="16"
                                                        FontWeight="DemiBold"
                                                        Text="Recent Sales" />
                                                    <TextBlock Classes="Caption Muted" Text="You made 265 sales this month." />
                                                </StackPanel>
                                                <StackPanel Margin="24,0,24,24" Spacing="24">
                                                    <Grid ColumnDefinitions="Auto * Auto">
                                                        <controls:Avatar
                                                            CornerRadius="18"
                                                            Height="36"
                                                            Source="../Assets/Sales/01.png"
                                                            VerticalAlignment="Center"
                                                            Width="36" />
                                                        <StackPanel Grid.Column="1" Margin="8,0">
                                                            <TextBlock Classes="Small" Text="Olivia Martin" />
                                                            <TextBlock Classes="Caption Muted" Text="olivia.martin@email.com" />
                                                        </StackPanel>
                                                        <TextBlock
                                                            FontSize="16"
