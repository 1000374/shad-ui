<UserControl
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.SwitchPage"
    x:DataType="viewModels:SwitchViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Switch" />
            <TextBlock
                Classes="p"
                HorizontalAlignment="Left"
                Text="A control that allows the user to toggle between checked and not checked."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Code="{Binding EnableCode}"
                        Language="xaml"
                        Title="Default">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <ToggleSwitch>
                                <ToggleSwitch.OffContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode Off"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OffContent>
                                <ToggleSwitch.OnContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode On"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OnContent>
                            </ToggleSwitch>
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding DisableCode}"
                        Language="xaml"
                        Title="Disabled">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <ToggleSwitch IsChecked="True" IsEnabled="False">
                                <ToggleSwitch.OffContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode Off"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OffContent>
                                <ToggleSwitch.OnContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode On"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OnContent>
                            </ToggleSwitch>
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding RightAlignedCode}"
                        Language="xaml"
                        Title="Right Aligned Content">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="8">
                            <ToggleSwitch extensions:ToggleSwitch.RightAlignedContent="True">
                                <ToggleSwitch.OffContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode Off"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OffContent>
                                <ToggleSwitch.OnContent>
                                    <TextBlock
                                        Classes="Small"
                                        Text="Airplane Mode On"
                                        VerticalAlignment="Center" />
                                </ToggleSwitch.OnContent>
                            </ToggleSwitch>
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>