<UserControl
    x:Class="ShadUI.Demo.Views.SwitchPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignWidth="800"
    x:DataType="viewModels:SwitchViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock Classes="h2" Text="Switch" />
            <TextBlock
                HorizontalAlignment="Left"
                Classes="p"
                Text="A control that allows the user to toggle between checked and not checked."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                MaxWidth="{StaticResource PageMaxWidth}"
                Margin="{StaticResource PageMargin}"
                Spacing="32">
                <controls:ControlBlock
                    Title="Default"
                    Code="{Binding EnableCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <ToggleSwitch>
                            <ToggleSwitch.OffContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode Off" />
                            </ToggleSwitch.OffContent>
                            <ToggleSwitch.OnContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode On" />
                            </ToggleSwitch.OnContent>
                        </ToggleSwitch>
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Disabled"
                    Code="{Binding DisableCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <ToggleSwitch IsChecked="True" IsEnabled="False">
                            <ToggleSwitch.OffContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode Off" />
                            </ToggleSwitch.OffContent>
                            <ToggleSwitch.OnContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode On" />
                            </ToggleSwitch.OnContent>
                        </ToggleSwitch>
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Right Aligned Content"
                    Code="{Binding RightAlignedCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <ToggleSwitch extensions:ToggleSwitchAssist.RightAlignedContent="True">
                            <ToggleSwitch.OffContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode Off" />
                            </ToggleSwitch.OffContent>
                            <ToggleSwitch.OnContent>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Classes="Small"
                                    Text="Airplane Mode On" />
                            </ToggleSwitch.OnContent>
                        </ToggleSwitch>
                    </StackPanel>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>