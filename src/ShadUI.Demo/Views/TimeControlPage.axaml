<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    mc:Ignorable="d" d:DesignWidth="800"
    x:Class="ShadUI.Demo.Views.TimeControlPage"
    x:DataType="viewModels:TimeControlViewModel">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="48 24" MaxWidth="1536">
            <TextBlock Classes="h3" Text="Time Controls" />
            <TextBlock
                Classes="p"
                TextWrapping="Wrap"
                HorizontalAlignment="Left"
                Text="A collection of time control components with a user-friendly interface for selecting time values, supporting both 12-hour and 24-hour formats" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48 24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Title="12Hour Clock Picker"
                        Code="{Binding Hour12ClockPickerCode}"
                        Language="xaml">
                        <StackPanel>
                            <TimePicker HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="24Hour Clock Picker"
                        Code="{Binding Hour24ClockPickerCode}"
                        Language="xaml">
                        <StackPanel>
                            <TimePicker ClockIdentifier="24HourClock" HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Disabled Picker"
                        Code="{Binding DisabledPickerCode }"
                        Language="xaml">
                        <StackPanel>
                            <TimePicker  IsEnabled="False" HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Picker Form Validation"
                        Code="{Binding FormPickerCode}"
                        Language="xaml">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <shadui:Card HorizontalAlignment="Center">
                                <shadui:Card.Header>
                                    <shadui:CardTitle>Create a schedule</shadui:CardTitle>
                                </shadui:Card.Header>
                                <StackPanel Spacing="16">
                                    <TimePicker Width="255"
                                                extensions:ControlAssist.Label="Start Time"
                                                extensions:ControlAssist.Hint="Set the beginning time"
                                                SelectedTime="{Binding StartTime}"/>
                                    <TimePicker Width="255"
                                                extensions:ControlAssist.Label="End Time"
                                                extensions:ControlAssist.Hint="Set the cut-off time"
                                                SelectedTime="{Binding EndTime}"/>
                                </StackPanel>
                                <shadui:Card.Footer>
                                    <Button Classes="Primary" Command="{Binding SubmitCommand}">
                                        Submit
                                    </Button>
                                </shadui:Card.Footer>
                            </shadui:Card>
                        </ScrollViewer>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="12HourClock Input"
                        Code="{Binding Hour12ClockInputCode}"
                        Language="xaml">
                        <StackPanel>
                            <shadui:TimeInput HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="24HourClock Input"
                        Code="{Binding Hour24ClockInputCode}"
                        Language="xaml">
                        <StackPanel>
                            <shadui:TimeInput ClockIdentifier="24HourClock" HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Disabled Input"
                        Code="{Binding DisabledInputCode }"
                        Language="xaml">
                        <StackPanel>
                            <shadui:TimeInput IsEnabled="False" HorizontalAlignment="Center" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Input Form Validation"
                        Code="{Binding FormInputCode}"
                        Language="xaml">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <shadui:Card HorizontalAlignment="Center">
                                <shadui:Card.Header>
                                    <shadui:CardTitle>Create a schedule</shadui:CardTitle>
                                </shadui:Card.Header>
                                <StackPanel Spacing="16">
                                    <shadui:TimeInput Width="255"
                                                      extensions:ControlAssist.Label="Start Time"
                                                      extensions:ControlAssist.Hint="Set the beginning time"
                                                      Value="{Binding StartTime, Mode=TwoWay}"/>
                                    <shadui:TimeInput Width="255"
                                                      extensions:ControlAssist.Label="End Time"
                                                      extensions:ControlAssist.Hint="Set the cut-off time"
                                                      Value="{Binding EndTime, Mode=TwoWay}"/>
                                </StackPanel>
                                <shadui:Card.Footer>
                                    <Button Classes="Primary" Command="{Binding SubmitCommand}">
                                        Submit
                                    </Button>
                                </shadui:Card.Footer>
                            </shadui:Card>
                        </ScrollViewer>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>