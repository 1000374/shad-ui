<UserControl
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.CalendarPage"
    x:DataType="viewModels:CalendarViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Calendar" />
            <TextBlock
                Classes="p"
                HorizontalAlignment="Left"
                Text="A date field component that allows users to enter and edit date."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock Code="{Binding DefaultCode}" Language="xaml">
                        <Calendar HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding DatePickerCode}"
                        Language="xaml"
                        Title="Date Picker">
                        <CalendarDatePicker
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="240" />
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding ReadOnlyDatePickerCode}"
                        Language="xaml"
                        Title="Read-only Date Picker">
                        <CalendarDatePicker
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="240"
                            extensions:ControlAssist.ReadOnly="True" />
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding FormValidationCode}"
                        Language="xaml"
                        Title="Form Validation">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <CalendarDatePicker
                                SelectedDate="{Binding SelectedDate}"
                                Width="240"
                                extensions:ControlAssist.Hint="Your date of birth is used to calculate your age."
                                extensions:ControlAssist.Label="Date of birth" />
                            <Button
                                Classes="Primary"
                                Command="{Binding SubmitCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,36,0,0">
                                Submit
                            </Button>
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>