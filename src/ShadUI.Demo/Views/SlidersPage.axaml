<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.SlidersPage"
    x:DataType="viewModels:SlidersViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Sliders" />
            <TextBlock
                Classes="p"
                HorizontalAlignment="Left"
                Text="An input where the user selects a value from within a given range."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">

                    <controls:ControlBlock
                        Code="{Binding DefaultSliderCode}"
                        Language="xaml"
                        Title="Default">
                        <StackPanel>
                            <Slider
                                Maximum="10"
                                TickFrequency="1"
                                Value="5" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding DisabledSliderCode}"
                        Language="xaml"
                        Title="Disabled">
                        <StackPanel>
                            <Slider
                                IsEnabled="False"
                                Maximum="10"
                                TickFrequency="1"
                                Value="5" />
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding TickEnabledSliderCode}"
                        Language="xaml"
                        Title="Tick Enabled">
                        <StackPanel>
                            <Slider
                                IsSnapToTickEnabled="True"
                                Maximum="10"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                Value="5" />
                        </StackPanel>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>

</UserControl>