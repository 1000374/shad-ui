<UserControl
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.MenuViewPage"
    x:DataType="viewModels:MenuViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:contents="clr-namespace:ShadUI.Contents;assembly=ShadUI"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ShadUI.Extensions;assembly=ShadUI"
    xmlns:icons="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Menus" />
            <TextBlock
                Classes="p"
                HorizontalAlignment="Left"
                Text="A menu component that provides a set of options or commands for the user to choose from."
                TextWrapping="Wrap" />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Code="{Binding MenuBarCode}"
                        Language="xaml"
                        Title="Simple Dropdown">
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="16">
                            <shadui:SimpleDropdown
                                Classes="Primary"
                                HorizontalAlignment="Center"
                                TriggerContent="Primary"
                                VerticalAlignment="Center">
                                <shadui:SimpleDropdown.MenuLabel>
                                    <TextBlock
                                        Classes="Small"
                                        FontFamily="{DynamicResource FontFamily}"
                                        Text="Actions" />
                                </shadui:SimpleDropdown.MenuLabel>
                                <Button Content="Add New">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Plus"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Button Content="Edit" IsEnabled="False">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Pencil"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Separator />
                                <Button Classes="Error" Content="Delete">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Trash"
                                            StrokeBrush="{Binding $parent.Foreground}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                            </shadui:SimpleDropdown>
                            <shadui:SimpleDropdown
                                Classes="Secondary"
                                HorizontalAlignment="Center"
                                TriggerContent="Secondary"
                                VerticalAlignment="Center">
                                <shadui:SimpleDropdown.MenuLabel>
                                    <TextBlock
                                        Classes="Small"
                                        FontFamily="{DynamicResource FontFamily}"
                                        Text="Actions" />
                                </shadui:SimpleDropdown.MenuLabel>
                                <Button Content="Add New">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Plus"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Button Content="Edit" IsEnabled="False">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Pencil"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Separator />
                                <Button Classes="Error" Content="Delete">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Trash"
                                            StrokeBrush="{Binding $parent.Foreground}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                            </shadui:SimpleDropdown>
                            <shadui:SimpleDropdown
                                Classes="Outline"
                                HorizontalAlignment="Center"
                                TriggerContent="Outline"
                                VerticalAlignment="Center">
                                <shadui:SimpleDropdown.MenuLabel>
                                    <TextBlock
                                        Classes="Small"
                                        FontFamily="{DynamicResource FontFamily}"
                                        Text="Actions" />
                                </shadui:SimpleDropdown.MenuLabel>
                                <Button Content="Add New">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Plus"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Button Content="Edit" IsEnabled="False">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Pencil"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Separator />
                                <Button Classes="Error" Content="Delete">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Trash"
                                            StrokeBrush="{Binding $parent.Foreground}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                            </shadui:SimpleDropdown>
                            <shadui:SimpleDropdown
                                Classes="Ghost"
                                HorizontalAlignment="Center"
                                TriggerContent="Ghost"
                                VerticalAlignment="Center">
                                <shadui:SimpleDropdown.MenuLabel>
                                    <TextBlock
                                        Classes="Small"
                                        FontFamily="{DynamicResource FontFamily}"
                                        Text="Actions" />
                                </shadui:SimpleDropdown.MenuLabel>
                                <Button Content="Add New">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Plus"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Button Content="Edit" IsEnabled="False">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Pencil"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Separator />
                                <Button Classes="Error" Content="Delete">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Trash"
                                            StrokeBrush="{Binding $parent.Foreground}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                            </shadui:SimpleDropdown>
                            <shadui:SimpleDropdown
                                Classes="Icon"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <shadui:SimpleDropdown.TriggerContent>
                                    <icons:Lucide
                                        Icon="Ellipsis"
                                        StrokeBrush="{DynamicResource ForegroundColor}"
                                        Width="16" />
                                </shadui:SimpleDropdown.TriggerContent>
                                <shadui:SimpleDropdown.MenuLabel>
                                    <TextBlock
                                        Classes="Small"
                                        FontFamily="{DynamicResource FontFamily}"
                                        Text="Actions" />
                                </shadui:SimpleDropdown.MenuLabel>
                                <Button Content="Add New">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Plus"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Button Content="Edit" IsEnabled="False">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Pencil"
                                            StrokeBrush="{DynamicResource ForegroundColor}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                                <Separator />
                                <Button Classes="Error" Content="Delete">
                                    <extensions:ButtonAssist.Icon>
                                        <icons:Lucide
                                            Height="16"
                                            Icon="Trash"
                                            StrokeBrush="{Binding $parent.Foreground}"
                                            Width="16" />
                                    </extensions:ButtonAssist.Icon>
                                </Button>
                            </shadui:SimpleDropdown>
                        </StackPanel>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding MenuBarCode}"
                        Language="xaml"
                        Title="Menu Bar">
                        <Border
                            BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            BoxShadow="{DynamicResource Shadow}"
                            CornerRadius="{DynamicResource MdCornerRadius}"
                            Height="36"
                            HorizontalAlignment="Center"
                            Padding="4">
                            <Menu>
                                <MenuItem Header="File">
                                    <MenuItem Header="New Tab" InputGesture="Ctrl + T" />
                                    <MenuItem Header="New Window" InputGesture="Ctrl + N" />
                                    <MenuItem Header="New Incognito Window" IsEnabled="False" />
                                    <Separator />
                                    <MenuItem Header="Share">
                                        <MenuItem Header="Email link" Width="128" />
                                        <MenuItem Header="Messages" />
                                        <MenuItem Header="Notes" />
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="Print" InputGesture="Ctrl + P" />
                                </MenuItem>
                                <MenuItem Header="Edit">
                                    <MenuItem
                                        Header="Undo"
                                        InputGesture="Ctrl + Z"
                                        Width="192" />
                                    <MenuItem Header="Redo" InputGesture="Ctrl + Shift + Z" />
                                    <Separator />
                                    <MenuItem Header="Find">
                                        <MenuItem Header="Search the web" />
                                        <MenuItem Header="Find..." />
                                        <MenuItem Header="Find Next" />
                                        <MenuItem Header="Find Previous" />
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="Cut" InputGesture="Ctrl + X" />
                                    <MenuItem Header="Copy" InputGesture="Ctrl + C" />
                                    <MenuItem Header="Paste" InputGesture="Ctrl + V" />
                                </MenuItem>
                                <MenuItem Header="View">
                                    <MenuItem Header="Always Show Bookmarks Bar" />
                                    <MenuItem Header="Always Show Full URLs">
                                        <MenuItem.Icon>
                                            <icons:Lucide
                                                Icon="Check"
                                                StrokeBrush="{DynamicResource ForegroundColor}"
                                                Width="12" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="Reload" InputGesture="Ctrl + R" />
                                    <MenuItem
                                        Header="Force Reload"
                                        InputGesture="Ctrl + Shift + R"
                                        IsEnabled="False" />
                                    <Separator />
                                    <MenuItem Header="Toggle Fullscreen" InputGesture="F11" />
                                    <Separator />
                                    <MenuItem Header="Hide Sidebar" />
                                </MenuItem>
                                <MenuItem Header="Profiles">
                                    <MenuItem Header="Andy" Width="192" />
                                    <MenuItem Header="Benoit">
                                        <MenuItem.Icon>
                                            <Border
                                                Background="{DynamicResource ForegroundColor}"
                                                CornerRadius="{DynamicResource FullCornerRadius}"
                                                Height="12"
                                                Width="12" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Luis" />
                                    <Separator />
                                    <MenuItem Header="Edit..." />
                                    <Separator />
                                    <MenuItem Header="Add Profile..." />
                                </MenuItem>
                            </Menu>
                        </Border>
                    </controls:ControlBlock>
                    <StackPanel>

                        <controls:ControlBlock
                            Code="{Binding DropDownCode}"
                            Language="xaml"
                            Title="Dropdown Menu">
                            <StackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="16"
                                VerticalAlignment="Center">
                                <StackPanel.Resources />
                                <Menu>
                                    <MenuItem
                                        Classes="Primary"
                                        Header="Primary"
                                        Margin="12,0"
                                        extensions:MenuItemAssist.PopupPlacement="Bottom">
                                        <extensions:MenuItemAssist.Label>
                                            <TextBlock
                                                Classes="Small"
                                                FontFamily="{DynamicResource FontFamily}"
                                                Text="My Account" />
                                        </extensions:MenuItemAssist.Label>
                                        <MenuItem
                                            Header="Profile"
                                            InputGesture="Ctrl + Shift + P"
                                            Width="224" />
                                        <MenuItem Header="Billing" InputGesture="Ctrl + B" />
                                        <MenuItem Header="Settings" InputGesture="Ctrl + S" />
                                        <MenuItem Header="Keyboard shortcuts" InputGesture="Ctrl + K" />
                                        <Separator />
                                        <MenuItem Header="Team" />
                                        <MenuItem Header="Invite users">
                                            <MenuItem Header="Email" Width="128" />
                                            <MenuItem Header="Message" />
                                            <MenuItem Header="More..." />
                                        </MenuItem>
                                        <MenuItem Header="New Team" InputGesture="Ctrl + T" />
                                        <Separator />
                                        <MenuItem Header="Github" />
                                        <MenuItem Header="Support" />
                                        <MenuItem Header="API" IsEnabled="False" />
                                        <Separator />
                                        <MenuItem Header="Log out" InputGesture="Ctrl + Shift + Q" />
                                        <Separator />
                                        <MenuItem Classes="Destructive" Header="Delete Account" />
                                    </MenuItem>
                                    <MenuItem
                                        Classes="Secondary"
                                        Header="Secondary"
                                        Margin="12,0"
                                        extensions:MenuItemAssist.PopupPlacement="Bottom">
                                        <extensions:MenuItemAssist.Label>
                                            <TextBlock
                                                Classes="Small"
                                                FontFamily="{DynamicResource FontFamily}"
                                                Text="My Account" />
                                        </extensions:MenuItemAssist.Label>
                                        <MenuItem
                                            Header="Profile"
                                            InputGesture="Ctrl + Shift + P"
                                            Width="224" />
                                        <MenuItem Header="Billing" InputGesture="Ctrl + B" />
                                        <MenuItem Header="Settings" InputGesture="Ctrl + S" />
                                        <MenuItem Header="Keyboard shortcuts" InputGesture="Ctrl + K" />
                                        <Separator />
                                        <MenuItem Header="Team" />
                                        <MenuItem Header="Invite users">
                                            <MenuItem Header="Email" Width="128" />
                                            <MenuItem Header="Message" />
                                            <MenuItem Header="More..." />
                                        </MenuItem>
                                        <MenuItem Header="New Team" InputGesture="Ctrl + T" />
                                        <Separator />
                                        <MenuItem Header="Github" />
                                        <MenuItem Header="Support" />
                                        <MenuItem Header="API" IsEnabled="False" />
                                        <Separator />
                                        <MenuItem Header="Log out" InputGesture="Ctrl + Shift + Q" />
                                        <Separator />
                                        <MenuItem Classes="Destructive" Header="Delete Account" />
                                    </MenuItem>
                                    <MenuItem
                                        Classes="Outline"
                                        Header="Outline"
                                        Margin="12,0"
                                        extensions:MenuItemAssist.PopupPlacement="Bottom">
                                        <extensions:MenuItemAssist.Label>
                                            <TextBlock
                                                Classes="Small"
                                                FontFamily="{DynamicResource FontFamily}"
                                                Text="My Account" />
                                        </extensions:MenuItemAssist.Label>
                                        <MenuItem
                                            Header="Profile"
                                            InputGesture="Ctrl + Shift + P"
                                            Width="224" />
                                        <MenuItem Header="Billing" InputGesture="Ctrl + B" />
                                        <MenuItem Header="Settings" InputGesture="Ctrl + S" />
                                        <MenuItem Header="Keyboard shortcuts" InputGesture="Ctrl + K" />
                                        <Separator />
                                        <MenuItem Header="Team" />
                                        <MenuItem Header="Invite users">
                                            <MenuItem Header="Email" Width="128" />
                                            <MenuItem Header="Message" />
                                            <MenuItem Header="More..." />
                                        </MenuItem>
                                        <MenuItem Header="New Team" InputGesture="Ctrl + T" />
                                        <Separator />
                                        <MenuItem Header="Github" />
                                        <MenuItem Header="Support" />
                                        <MenuItem Header="API" IsEnabled="False" />
                                        <Separator />
                                        <MenuItem Header="Log out" InputGesture="Ctrl + Shift + Q" />
                                        <Separator />
                                        <MenuItem Classes="Destructive" Header="Delete Account" />
                                    </MenuItem>
                                    <MenuItem
                                        Classes="Ghost"
                                        Header="Ghost"
                                        Margin="12,0"
                                        extensions:MenuItemAssist.PopupPlacement="Bottom">
                                        <extensions:MenuItemAssist.Label>
                                            <TextBlock
                                                Classes="Small"
                                                FontFamily="{DynamicResource FontFamily}"
                                                Text="My Account" />
                                        </extensions:MenuItemAssist.Label>
                                        <MenuItem
                                            Header="Profile"
                                            InputGesture="Ctrl + Shift + P"
                                            Width="224" />
                                        <MenuItem Header="Billing" InputGesture="Ctrl + B" />
                                        <MenuItem Header="Settings" InputGesture="Ctrl + S" />
                                        <MenuItem Header="Keyboard shortcuts" InputGesture="Ctrl + K" />
                                        <Separator />
                                        <MenuItem Header="Team" />
                                        <MenuItem Header="Invite users">
                                            <MenuItem Header="Email" Width="128" />
                                            <MenuItem Header="Message" />
                                            <MenuItem Header="More..." />
                                        </MenuItem>
                                        <MenuItem Header="New Team" InputGesture="Ctrl + T" />
                                        <Separator />
                                        <MenuItem Header="Github" />
                                        <MenuItem Header="Support" />
                                        <MenuItem Header="API" IsEnabled="False" />
                                        <Separator />
                                        <MenuItem Header="Log out" InputGesture="Ctrl + Shift + Q" />
                                        <Separator />
                                        <MenuItem Classes="Destructive" Header="Delete Account" />
                                    </MenuItem>
                                    <MenuItem
                                        Classes="Icon"
                                        Margin="12,0"
                                        extensions:MenuItemAssist.PopupPlacement="Bottom">
                                        <MenuItem.Header>
                                            <icons:Lucide
                                                Icon="Ellipsis"
                                                StrokeBrush="{DynamicResource ForegroundColor}"
                                                Width="16" />
                                        </MenuItem.Header>
                                        <extensions:MenuItemAssist.Label>
                                            <TextBlock
                                                Classes="Small"
                                                FontFamily="{DynamicResource FontFamily}"
                                                Text="My Account" />
                                        </extensions:MenuItemAssist.Label>
                                        <MenuItem
                                            Header="Profile"
                                            InputGesture="Ctrl + Shift + P"
                                            Width="224" />
                                        <MenuItem Header="Billing" InputGesture="Ctrl + B" />
                                        <MenuItem Header="Settings" InputGesture="Ctrl + S" />
                                        <MenuItem Header="Keyboard shortcuts" InputGesture="Ctrl + K" />
                                        <Separator />
                                        <MenuItem Header="Team" />
                                        <MenuItem Header="Invite users">
                                            <MenuItem Header="Email" Width="128" />
                                            <MenuItem Header="Message" />
                                            <MenuItem Header="More..." />
                                        </MenuItem>
                                        <MenuItem Header="New Team" InputGesture="Ctrl + T" />
                                        <Separator />
                                        <MenuItem Header="Github" />
                                        <MenuItem Header="Support" />
                                        <MenuItem Header="API" IsEnabled="False" />
                                        <Separator />
                                        <MenuItem Header="Log out" InputGesture="Ctrl + Shift + Q" />
                                        <Separator />
                                        <MenuItem Classes="Destructive" Header="Delete Account" />
                                    </MenuItem>
                                </Menu>
                            </StackPanel>
                        </controls:ControlBlock>
                        <Grid ColumnDefinitions="Auto *">
                            <PathIcon
                                Data="{x:Static contents:Icons.Warning}"
                                Foreground="{DynamicResource WarningColor}"
                                Height="24"
                                Width="24" />
                            <TextBlock
                                Classes="Small"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Text="Performance Alert: Complex MenuItems in collection controls (DataGrid/ItemsControl) may impact performance with large datasets. Consider using SimpleDropdown for better performance."
                                TextWrapping="Wrap"
                                VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>