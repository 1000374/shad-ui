<UserControl
    x:Class="ShadUI.Demo.Views.ButtonPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignWidth="800"
    x:DataType="viewModels:ButtonViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="{StaticResource PageMaxWidth}"
            Margin="{StaticResource PageMargin}"
            DockPanel.Dock="Top">
            <TextBlock Classes="h2" Text="Button" />
            <TextBlock Classes="p" Text="Displays a button component" />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                MaxWidth="{StaticResource PageMaxWidth}"
                Margin="{StaticResource PageMargin}"
                Spacing="32">
                <controls:ControlBlock
                    Title="Primary"
                    Code="{Binding PrimaryCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Primary"
                            Command="{Binding SubmitCommand}"
                            Content="Primary" />
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Primary"
                            Command="{Binding SubmitCommand}"
                            Content="Edit">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,0,6,0"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            Classes="Primary"
                            Content="Disable"
                            IsEnabled="False" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Secondary"
                    Code="{Binding SecondaryCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Secondary"
                            Command="{Binding SubmitCommand}"
                            Content="Secondary" />
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Secondary"
                            Command="{Binding SubmitCommand}"
                            Content="Edit">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,0,6,0"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            Classes="Secondary"
                            Content="Disable"
                            IsEnabled="False" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Destructive"
                    Code="{Binding DestructiveCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Destructive"
                            Command="{Binding SubmitCommand}"
                            Content="Destructive" />
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Destructive"
                            Command="{Binding SubmitCommand}"
                            Content="Delete">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,0,6,0"
                                    Classes="LucideIcon"
                                    Text="&#57741;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            Classes="Destructive"
                            Content="Disable"
                            IsEnabled="False" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Outline"
                    Code="{Binding OutlineCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Outline"
                            Command="{Binding SubmitCommand}"
                            Content="Outline" />
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Outline"
                            Command="{Binding SubmitCommand}"
                            Content="Edit">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,0,6,0"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            Classes="Outline"
                            Content="Disable"
                            IsEnabled="False" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Ghost"
                    Code="{Binding GhostCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Ghost"
                            Command="{Binding SubmitCommand}"
                            Content="Ghost" />
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="Ghost"
                            Command="{Binding SubmitCommand}"
                            Content="Edit">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,0,6,0"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            Classes="Ghost"
                            Content="Disable"
                            IsEnabled="False" />
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Icon"
                    Code="{Binding IconCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            BorderBrush="{DynamicResource BorderColor}"
                            Classes="Icon"
                            Command="{Binding SubmitCommand}">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,8"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button
                            BorderBrush="{DynamicResource BorderColor}"
                            Classes="Icon"
                            IsEnabled="False">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,8"
                                    Classes="LucideIcon"
                                    Text="&#57849;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                    </StackPanel>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Destructive Icon"
                    Code="{Binding DestructiveIconCode}"
                    Language="xaml">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            shadui:ButtonAssist.ShowProgress="{Binding IsBusy}"
                            Classes="DestructiveIcon"
                            Command="{Binding SubmitCommand}">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,8"
                                    Classes="LucideIcon"
                                    Text="&#57741;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                        <Button Classes="DestructiveIcon" IsEnabled="False">
                            <shadui:ButtonAssist.Icon>
                                <TextBlock
                                    Margin="0,8"
                                    Classes="LucideIcon"
                                    Text="&#57741;" />
                            </shadui:ButtonAssist.Icon>
                        </Button>
                    </StackPanel>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>