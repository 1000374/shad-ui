<UserControl
    x:Class="ShadUI.Demo.Views.TogglePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:ToggleViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="1536"
            Margin="48,24"
            DockPanel.Dock="Top">
            <TextBlock Classes="h3" Text="Toggle" />
            <TextBlock Classes="p" Text="A two-state button that can be either on or off." />
        </StackPanel>
        <ScrollViewer>
            <StackPanel
                MaxWidth="1536"
                Margin="48,24"
                Spacing="32">
                <controls:ControlBlock
                    Title="Default"
                    Code="{Binding DefaultCode}"
                    Language="xaml">
                    <ToggleButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Classes="Default">
                        <TextBlock Classes="LucideIcon" Text="&#57441;" />
                    </ToggleButton>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Outline"
                    Code="{Binding OutlineCode}"
                    Language="xaml">
                    <ToggleButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Classes="Outline">
                        <TextBlock Classes="LucideIcon" Text="&#57441;" />
                    </ToggleButton>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="With Text"
                    Code="{Binding WithTextCode}"
                    Language="xaml">
                    <ToggleButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Classes="Default">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Classes="LucideIcon" Text="&#57601;" />
                            <TextBlock Text="Italic" />
                        </StackPanel>
                    </ToggleButton>
                </controls:ControlBlock>
                <controls:ControlBlock
                    Title="Disable"
                    Code="{Binding DisableCode}"
                    Language="xaml">
                    <ToggleButton
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Classes="Default"
                        IsEnabled="False">
                        <TextBlock Classes="LucideIcon" Text="&#57441;" />
                    </ToggleButton>
                </controls:ControlBlock>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>