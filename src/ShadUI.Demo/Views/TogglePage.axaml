<UserControl
    x:Class="ShadUI.Demo.Views.TogglePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:TogglesViewModel"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <StackPanel
            MaxWidth="1536"
            Margin="48,24"
            DockPanel.Dock="Top">
            <TextBlock Classes="h3" Text="Toggle" />
            <TextBlock Classes="p" Text="A two-state button that can be either on or off." />
        </StackPanel>
        <ScrollViewer>
            <Panel MaxWidth="1536" Margin="48,24">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Title="Default"
                        Code="{Binding Default}"
                        Language="xaml">
                        <ToggleButton
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Classes="Default">
                            <icons:Lucide
                                Width="10"
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5" />
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Outline"
                        Code="{Binding Outline}"
                        Language="xaml">
                        <ToggleButton
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Classes="Outline">
                            <icons:Lucide
                                Width="10"
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5" />
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="With Text"
                        Code="{Binding WithText}"
                        Language="xaml">
                        <ToggleButton
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Classes="Default">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <icons:Lucide
                                    Width="10"
                                    Height="16"
                                    Icon="Italic"
                                    StrokeBrush="{DynamicResource ForegroundColor}"
                                    StrokeThickness="1.5" />
                                <TextBlock Text="Italic" />
                            </StackPanel>
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Title="Disable"
                        Code="{Binding Disable}"
                        Language="xaml">
                        <ToggleButton
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Classes="Default"
                            IsEnabled="False">
                            <icons:Lucide
                                Width="10"
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5" />
                        </ToggleButton>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>