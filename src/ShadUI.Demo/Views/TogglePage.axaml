<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ShadUI.Demo.Views.TogglePage"
    x:DataType="viewModels:TogglesViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ShadUI.Demo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ShadUI.Demo.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Margin="48,24"
            MaxWidth="1536">
            <TextBlock Classes="h3" Text="Toggle" />
            <TextBlock Classes="p" Text="A two-state button that can be either on or off." />
        </StackPanel>
        <ScrollViewer>
            <Panel Margin="48,24" MaxWidth="1536">
                <StackPanel Spacing="32">
                    <controls:ControlBlock
                        Code="{Binding Default}"
                        Language="xaml"
                        Title="Default">
                        <ToggleButton
                            Classes="Default"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <icons:Lucide
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5"
                                Width="10" />
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding Outline}"
                        Language="xaml"
                        Title="Outline">
                        <ToggleButton
                            Classes="Outline"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <icons:Lucide
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5"
                                Width="10" />
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding WithText}"
                        Language="xaml"
                        Title="With Text">
                        <ToggleButton
                            Classes="Default"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <icons:Lucide
                                    Height="16"
                                    Icon="Italic"
                                    StrokeBrush="{DynamicResource ForegroundColor}"
                                    StrokeThickness="1.5"
                                    Width="10" />
                                <TextBlock Text="Italic" />
                            </StackPanel>
                        </ToggleButton>
                    </controls:ControlBlock>
                    <controls:ControlBlock
                        Code="{Binding Disable}"
                        Language="xaml"
                        Title="Disable">
                        <ToggleButton
                            Classes="Default"
                            HorizontalAlignment="Center"
                            IsEnabled="False"
                            VerticalAlignment="Center">
                            <icons:Lucide
                                Height="16"
                                Icon="Bold"
                                StrokeBrush="{DynamicResource ForegroundColor}"
                                StrokeThickness="1.5"
                                Width="10" />
                        </ToggleButton>
                    </controls:ControlBlock>
                </StackPanel>
            </Panel>
        </ScrollViewer>
    </DockPanel>
</UserControl>