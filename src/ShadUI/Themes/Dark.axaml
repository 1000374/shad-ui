<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://ShadUI/Controls/Index.axaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- basic colors -->
    <Color x:Key="ForegroundColor">#FAFAFA</Color>
    <Color x:Key="BackgroundColor">Transparent</Color>
    <Color x:Key="MutedColor">#27272A</Color>
    <Color x:Key="CardBackgroundColor">#122C2C30</Color>
    <Color x:Key="WindowBackgroundColor">#09090B</Color>
    <Color x:Key="BorderColor">#353535</Color>

    <Color x:Key="TitleBarBackgroundColor">#09090B</Color>
