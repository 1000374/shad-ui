<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ShadUI.Controls">
    <Design.PreviewWith>
        <Panel Margin="48 24" MaxWidth="670">
            <StackPanel Spacing="32">
                <StackPanel.Styles>
                    <StyleInclude Source="Card.axaml" />
                </StackPanel.Styles>
                <StackPanel Spacing="8">
                    <TextBlock Text="h1" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="h1" Text="Taxing Laughter: The Joke Tax Chronicles" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="h2" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="h2" Text="The People of the Kingdom" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="h3" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="h3" Text="The Joke Tax" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="h4" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="h4" Text="People stopped telling jokes" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="p" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="p"
                                   Text="The king, seeing how much happier his subjects were, realized the error of his ways and repealed the joke tax." />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Lead" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" Classes="Lead"
                                   Text="A modal dialog that interrupts the user with important content and expects a response." />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Large" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Classes="Large"
                                   Text="Are you absolutely sure?" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Small" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Classes="Small" Text="Email address" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Caption" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Classes="Caption" Text="Username" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Muted" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Classes="p Muted"
                                   Text="Enter your email address" />
                    </controls:Card>
                </StackPanel>
                <StackPanel Spacing="8">
                    <TextBlock Text="Error" Classes="h3" />
                    <Separator Margin="0" />
                    <controls:Card Padding="48">
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Classes="Caption Error"
                                   Text="Invalid email address" />
                    </controls:Card>
                </StackPanel>
            </StackPanel>
        </Panel>
    </Design.PreviewWith>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>

    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="LineHeight" Value="36" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.h4">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.p">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="28" />
    </Style>

    <Style Selector="TextBlock.Lead">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundLeadColor}" />
    </Style>

    <Style Selector="TextBlock.Large">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="TextBlock.Small">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="TextBlock.Caption">
        <Setter Property="FontSize" Value="12.8" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style Selector="TextBlock.Muted">
        <Setter Property="Foreground" Value="{DynamicResource MutedColor}" />
    </Style>

    <Style Selector="TextBlock.Error">
        <Setter Property="Foreground" Value="{DynamicResource DestructiveColor}" />
    </Style>
</Styles>