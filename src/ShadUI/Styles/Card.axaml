<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <StackPanel Spacing="4" Margin="20">
            <Border Classes="Card" Padding="20">
                <TextBlock Text="Default" TextAlignment="Center" />
            </Border>
            <Border Classes="Card Bordered" Padding="20">
                <TextBlock Text="Bordered" TextAlignment="Center" />
            </Border>
            <Border Classes="Card Bordered Shadowed" Padding="20">
                <TextBlock Text="Bordered Shadow" TextAlignment="Center" />
            </Border>
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="Border.Card">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="CornerRadius" Value="{DynamicResource MediumCornerRadius}" />

        <Style Selector="^.Bordered">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
            <Setter Property="BorderThickness" Value="{DynamicResource ThemeBorderThickness}" />
        </Style>

        <Style Selector="^.Shadowed">
            <Setter Property="BoxShadow" Value="1 1 4 0 LightGray" />
        </Style>
    </Style>
</Styles>