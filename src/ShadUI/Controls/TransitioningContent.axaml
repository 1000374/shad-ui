<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ShadUI.Controls">
    <ControlTheme x:Key="TransitioningContentStyle" TargetType="controls:TransitioningContent">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <ContentPresenter Name="PART_FirstBufferControl"
                                      Content="{TemplateBinding FirstBuffer}"
                                      IsHitTestVisible="False" />
                    <ContentPresenter Name="PART_SecondBufferControl"
                                      Content="{TemplateBinding SecondBuffer}"
                                      IsHitTestVisible="False" />
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    <ControlTheme x:Key="{x:Type controls:TransitioningContent}"
                  BasedOn="{StaticResource TransitioningContentStyle}"
                  TargetType="controls:TransitioningContent" />
</ResourceDictionary>