<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ShadUI.Controls">
    <Design.PreviewWith>
        <StackPanel
            Margin="24"
            Orientation="Horizontal"
            Spacing="16">
            <controls:Skeleton
                Width="64"
                Height="64"
                CornerRadius="{DynamicResource FullCornerRadius}" />
            <StackPanel VerticalAlignment="Center" Spacing="8">
                <controls:Skeleton
                    Width="255"
                    Height="28"
                    HorizontalAlignment="Left" />
                <controls:Skeleton
                    Width="200"
                    Height="20"
                    HorizontalAlignment="Left" />
            </StackPanel>
        </StackPanel>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type controls:Skeleton}" TargetType="controls:Skeleton">
        <Setter Property="Background" Value="{DynamicResource PrimaryColor10}" />
        <Setter Property="CornerRadius" Value="{DynamicResource LgCornerRadius}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}" />
            </ControlTemplate>
        </Setter>
        <Style Selector="^ /template/ Border">
            <Style.Animations>
                <Animation IterationCount="Infinite" Duration="0:0:2">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1.0" />
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="0.5" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1.0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </ControlTheme>
</ResourceDictionary>
