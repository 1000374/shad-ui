<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ShadUI.Controls"
                    xmlns:converters="clr-namespace:ShadUI.Converters">
    <Design.PreviewWith>
        <controls:BusyArea Width="140" Height="300" IsBusy="True">
            Busy...
        </controls:BusyArea>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type controls:BusyArea}" TargetType="controls:BusyArea">
        <Setter Property="LoadingSize" Value="32" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Name="PART_AreaBackground" Background="{DynamicResource BusyAreaOverlayColor}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Opacity="0"
                            Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.4" />
                            </Transitions>
                        </Border.Transitions>
                    </Border>
                    <StackPanel Name="PART_Content" VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <StackPanel.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.4" />
                            </Transitions>
                        </StackPanel.Transitions>
                        <Viewbox Width="{TemplateBinding LoadingSize}" Height="{TemplateBinding LoadingSize}">
                            <ContentPresenter
                                Content="{TemplateBinding IsBusy, Converter={x:Static converters:BooleanConverters.ToLoading}}" />
                        </Viewbox>
                        <ContentPresenter Content="{TemplateBinding Content }" HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <Panel.Styles>
                        <Style Selector="controls|BusyArea[IsBusy=True]">
                            <Style Selector="^ Border#PART_AreaBackground">
                                <Setter Property="Opacity" Value="0.80" />
                                <Setter Property="IsHitTestVisible" Value="True" />
                            </Style>
                            <Style Selector="^ StackPanel#PART_Content">
                                <Setter Property="Opacity" Value="1" />
                                <Setter Property="IsVisible" Value="True" />
                                <Setter Property="IsHitTestVisible" Value="True" />
                                <Setter Property="RenderTransform" Value="scale(1)" />
                            </Style>
                        </Style>
                        <Style Selector="controls|BusyArea[IsBusy=False]">
                            <Style Selector="^ Border#PART_AreaBackground">
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="IsHitTestVisible" Value="False" />
                            </Style>
                            <Style Selector="^ StackPanel#PART_Content">
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="IsHitTestVisible" Value="False" />
                                <Setter Property="RenderTransform" Value="scale(0.70)" />
                            </Style>
                        </Style>
                    </Panel.Styles>
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>