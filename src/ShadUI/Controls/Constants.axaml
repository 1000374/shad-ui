<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard">

    <FontFamily x:Key="FontFamily">Inter</FontFamily>

    <system:TimeSpan x:Key="LongAnimationDuration">0.5</system:TimeSpan>
    <system:TimeSpan x:Key="MediumAnimationDuration">0.35</system:TimeSpan>
    <system:TimeSpan x:Key="ShortAnimationDuration">0.2</system:TimeSpan>

    <CornerRadius x:Key="SmallCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="ExtraLargeCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="RoundedCornerRadius">999</CornerRadius>

    <Easing x:Key="MenuEasing">CircularEaseOut</Easing>

</ResourceDictionary>